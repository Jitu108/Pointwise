@model Pointwise.Web.Admin.ViewModels.CategoryViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Id == 0)
{
    <h2 class="header">New Category</h2>
}
else
{
    <h2 class="header">Edit Category</h2>
}

@using (Html.BeginForm("Save", "Category"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)

    </div>
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Index", "Category", null, new { @class = "btn btn-default" })
}
